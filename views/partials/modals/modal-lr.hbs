{{!--
Partial: Modal Login / Register
--}}

<!-- Modal Login / Register -->
<div class="modal fade" id="login-register" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <!-- Nav Tabs -->
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="login">
                        <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#login"
                            aria-controls="login" aria-selected="true" type="button">Connexion</button>
                    </li>
                    <li class="nav-item" role="register">
                        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#register"
                            aria-controls="register" aria-selected="false" type="button">Inscription</button>
                    </li>
                </ul>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <!-- Tab Content Login / Register -->
            <div class="tab-content" id="myTabContent">
                <!-- Tab Panel Login -->
                <div class="tab-pane show active" id="login" role="tabpanel" aria-labelledby="login-tab">
                    <div class="modal-body">
                        {{#if modalLogin}}
                            {{> flash/flash-modal data=modalLogin }}
                        {{/if}}
                        <form method="post" action="/login">
                            <!-- Username & Password Input :-->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="contact-form">
                                        <input class="form-control" name="pseudo" type="text" placeholder="Identifiant">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="contact-form">
                                        <input class="form-control" name="password" type="password"
                                            placeholder="Mot de passe">
                                    </div>
                                </div>
                            </div>
                            <!-- Forget Password -->
                            <div class="row">
                                <div class="col-md-12 text-end mb-2">
                                    <button type="button" class="btn btn-outline-light ms-2 me-2 mb-2" data-bs-toggle="modal" data-bs-target="#forgot">
                                        Mot de passe oubli√© ?
                                    </button>
                                </div>
                            </div>
                            <!-- Button Input -->
                            <div class="row">
                                <div class="col-md-12 text-center">
                                    <button class="btn btn-outline-dark ms-2 me-2 mb-2">Connexion</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- Tab Panel Register -->
                <div class="tab-pane fade" id="register" role="tabpanel" aria-labelledby="register-tab">
                    <div class="modal-body">
                        {{#if modalRegister}}
                            {{> flash/flash-modal data=modalRegister }}
                        {{/if}}
                        <form method="post" action="/register">
                            <!-- Email Input -->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="contact-form">
                                        <input class="form-control" name="pseudo" type="text" placeholder="Identifiant">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="contact-form">
                                        <input class="form-control" name="email" type="email" placeholder="Email">
                                    </div>
                                </div>
                            </div>
                            <!-- Password Input -->
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="contact-form">
                                        <input class="form-control" name="password" type="password"
                                            placeholder="Mot de passe">
                                    </div>
                                </div>
                            </div>
                            <!-- Password Confirmation -->
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="contact-form">
                                        <input class="form-control" name="cPassword" type="password"
                                            placeholder="Confirmer Votre Mot de passe">
                                    </div>
                                </div>
                            </div>
                            <!-- Button Input-->
                            <div class="row">
                                <div class="col-md-12 text-center">
                                    <button class="btn btn-outline-dark ms-2 me-2 mb-2">Inscription</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- Modal Footer Social -->
                <div class="modal-footer justify-content-center">
                    <p>Suivez-nous : </p>
                    <ul class="social-footer">
                        <li><a class="social-footer-block social-facebook"
                                href="https://www.facebook.com/evenementjapanzone" target="_blank"><span
                                    class="fab fa-facebook-square"></span></a></li>
                        <li><a class="social-footer-block social-twitter" href="https://twitter.com/Japanzone72"
                                target="_blank"><span class="fab fa-twitter"></span></a></li>
                        <li><a class="social-footer-block social-youtube"
                                href="https://www.youtube.com/channel/UCXAKfJnDfiaNPykSMriiiDQ" target="_blank"><span
                                    class="fab fa-youtube"></span></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>